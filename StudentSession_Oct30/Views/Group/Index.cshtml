@model StudentSession_Oct12.Models.Group



@if (Model.stuOnDB == null)
{
    <!--<script type="text/javascript">alert("Successfully Changed DB.");</script>-->
    
    <script src="../wwwroot/javascript/clickButton.js"></script>

    <a href="./Index">Go Back to Student List</a>

    <div class=“row” >
    <button class=“btn btn-primary” id="launchButton">Re-Edit</button>
    <div class=“modal fade” id=“stuModal” tabIndex=“-1” data-target=”#stuModal” data-toggle=“modal” >
    <div class=“modal-dialog”>
    <div class = “modal-content”>
    <div class=“modal-header”>
    <label>Login</label>
    </div>
    <div class =“modal-body”>
    <form>
    <div class=“form-group”>
    <label>Email-Id</label>
    <input type=“text” placeholder=“Email-Id” id=“email” />
    </div>
    <div class =“form-group”>
    <label>Password</label>
    <input type=“password” placeholder=“Password-Id” id=“password” />
    </div>
    </form>
    </div>
    <div class=“modal-footer”>
    <button value=“Login” id=“login”>Login</button>
    <button value=“Close” data-dismiss=“modal” id=“close”>Close</button>
    </div>
    </div>
    </div>
    </div>
    </div>
    

}



else
{

    <head>

    <title></title>
    <meta charset=“utf-8”/>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    </head>






    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script> 



    <a href="../admin">Go Back to Admin Root Page.</a>

    <form method="post" asp-controller="Group" asp-action="Create">
    <div class="input-group">
    <div>
    <label>FirstName</label>
    <input asp-for="Name" type="text" name="name" class="form-control" placeholder="FirstName" />
    </div>
    <!--<div>
        <label>LastName</label>
        <input asp-for="LastName" type="text" name="lastname" class="form-control" placeholder="LastName" />
    </div>-->
    <div>
    <label>Year</label>
    <input asp-for="Year" type="text" name="year" class="form-control" placeholder="Year" />
    </div>
    <div>
    <label>Major</label>
    <input asp-for="Major" type="text" name="major" class="form-control" placeholder="Major" />
    </div>
    <div>
    <label>Instructor_id (advisor)</label>
    <input asp-for="Instructor_id" type="text" name="instructor_id" class="form-control" placeholder="Instructor_id" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    </form>

    <table class="table table-bordered table-responsive table-hover">
    <tr>
    <th>Student_id</th>
    <th>Name</th>
    <!--<th>LastName</th>-->
    <th>Year</th>
    <th>Major</th>
    <th>Instructor_id (Advisor)</th>
    </tr>


    @foreach (StudentModel s in Model.stuOnDB)
    {

        <tr>
        <td>@s.Student_id</td>
        <td>@s.FirstName</td>
        <!--<td>s.LastName</td>-->
        <td>@s.Year</td>
        <td>@s.Major</td>
        <td>@s.Instructor_id</td>
        <td>
        <form method="post" asp-controller="Group" asp-action="Update">
        <div class="input-group-update">
        <input asp-for="Student_id" type="text" name="student_id" class="form-control" value="@s.Student_id.ToString()" hidden />
        <input asp-for="Name" type="text" name="name" class="form-control" value="@s.FirstName.ToString()" />
        <!--<input asp-for="LastName" type="text" name="lastname" class="form-control" value="@s.LastName.ToString()" />-->
        <input asp-for="Year" type="text" name="year" class="form-control" value="@s.Year.ToString()" />
        <input asp-for="Major" type="text" name="major" class="form-control" value="@s.Major.ToString()" />
        <input asp-for="Instructor_id" type="text" name="instructor_id" class="form-control" value="@s.Instructor_id.ToString()" />
        <input type="submit" value="Update" class="btn btn-primary" id=@(String.Format("{0}{1}", "student", s.Student_id.ToString())) />
        </div>
        </form>
        </td>
        <td>
        <form method="post" asp-controller="Group" asp-action="Delete">
        <div class="input-group">
        <input asp-for="Student_id" type="text" name="student_id" class="form-control" value="@s.Student_id.ToString()" hidden />
        <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
        </form>
        </td>
        </tr>
    }
    </table>


}




